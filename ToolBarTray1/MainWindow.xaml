<Window x:Class="ToolBarTray1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolBarTray1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <ToolBarTray Background="White">
      <ToolBar Band="1" BandIndex="1">
        <Button>
          <Image Source="Resources\Actions-edit-cut-icon.png" Width="32" Height="32" />
        </Button>
        <Button>
          <Image Source="Resources\File-Copy-icon.png" Width="32" Height="32"  />
        </Button>
        <Button>
          <Image Source="Resources\Paste-icon.png" Width="32" Height="32"  />
        </Button>
      </ToolBar>
      <ToolBar Band="2" BandIndex="1">
        <Button>
          <Image Source="Resources\Arrow-undo-icon.png" Width="32" Height="32"  />
        </Button>
        <Button>
          <Image Source="Resources\Arrow-redo-icon.png" Width="32" Height="32"  />
        </Button>
      </ToolBar>
    </ToolBarTray>
  </Grid>
</Window>
